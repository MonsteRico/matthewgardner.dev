---
import Signature from "../components/Signature.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Matthew Gardner">
	<main class="">
		<section class="w-full bg-red-500 flex md:flex-row flex-col justify-between pb-48" id="hero">
			<div class="md:ml-48 md:mt-48 flex flex-col">
				<Signature />
				<h1 class="fade text-2xl md:text-4xl border-b-2 border-yellow-400 text-white p-5 md:p-0 md:pt-5">
					Web Developer and Computer Science Student
				</h1>
			</div>
			<div class="fade md:mr-72">
				<img class="portrait" src="/goodpictureforjobstuff.jpg" />
			</div>
		</section>
	</main>
</Layout>

<style>
	.portrait {
		width: 400px;
		height: 600px;
		margin: 1em;
		border-radius: 1%;
		box-shadow: 0 0 12px 6px #fff; /* inner white */
	}
	@keyframes fade {
		0% {
			opacity: 0;
		}
		100% {
			opacity: 1;
		}
	}
	.fade {
		opacity: 0;
		animation: fade 0.5s forwards;
		animation-delay: 4s;
	}
</style>
